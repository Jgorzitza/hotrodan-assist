{
  "name": "hotrod-an-assist",
  "private": true,
  "scripts": {
    "shopify:deploy": "shopify app deploy",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "lint-staged",
    "scaffold": "plop",
    "release": "tools/release/version-bump.sh",
    "release:notes": "tools/release/release-notes.sh",
    "release:patch": "tools/release/version-bump.sh patch",
    "release:minor": "tools/release/version-bump.sh minor",
    "release:major": "tools/release/version-bump.sh major",
    "security:scan": "tools/security/security-scan.sh all",
    "security:secrets": "tools/security/security-scan.sh secrets",
    "security:licenses": "tools/security/security-scan.sh licenses",
    "security:audit": "npm audit --audit-level=moderate",
    "bootstrap": "tools/bootstrap/bootstrap.sh",
    "dev:setup": "make bootstrap",
    "dev:start": "make start",
    "dev:stop": "make stop",
    "debug": "node tools/debugging/debug-tracer.js",
    "debug:templates": "node tools/debugging/debug-templates.js",
    "prod:optimize": "tools/production-optimization/production-optimizer.sh setup",
    "prod:start": "tools/production-optimization/production-optimizer.sh start",
    "prod:stop": "tools/production-optimization/production-optimizer.sh stop",
    "prod:status": "tools/production-optimization/production-optimizer.sh status",
    "prod:monitor": "node tools/production-optimization/performance-monitor.js",
    "prod:errors": "node tools/production-optimization/error-tracker.js",
    "prod:system": "node tools/production-optimization/system-monitor.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "build": "npm run typecheck",
    "test:unit": "vitest run --dir app/tests/unit",
    "test:integration": "vitest run --dir app/tests/integration",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:sync:webhooks": "npx vitest run --root dashboard --config vitest.config.ts dashboard/app/lib/webhooks/__tests__/handlers.server.test.ts dashboard/app/lib/webhooks/__tests__/queue.server.test.ts dashboard/app/lib/webhooks/__tests__/processors.server.test.ts",
    "prepare": "husky",
    "security:sast": "node scripts/security/sast-scan.js",
    "security:dast": "node scripts/security/dast-scan.js",
    "security:all": "npm run security:audit && npm run security:sast && npm run security:dast",
    "test:accessibility": "npx playwright test e2e/accessibility.spec.ts",
    "lint:accessibility": "eslint . --ext .ts,.tsx,.js,.jsx --plugin jsx-a11y",
    "accessibility:all": "npm run lint:accessibility && npm run test:accessibility",
    "test:load": "node scripts/load-testing/load-test.js",
    "test:soak": "node scripts/load-testing/soak-test.js",
    "test:performance": "npm run test:load && npm run test:soak",
    "test:flaky": "node scripts/test-reliability/flaky-test-detector.js",
    "test:retry": "node scripts/test-reliability/test-retry.js",
    "test:reliability": "npm run test:flaky && npm run test:retry",
    "quality:dashboard": "node scripts/quality-dashboard.js",
    "quality:all": "npm run test:e2e && npm run security:all && npm run test:accessibility && npm run test:load && npm run test:reliability && npm run quality:dashboard"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@faker-js/faker": "^10.0.0",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.1",
    "@graphql-codegen/typescript-operations": "^5.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@graphql-codegen/typescript-resolvers": "^5.0.1",
    "@nx/js": "^21.5.3",
    "@nx/node": "^21.5.3",
    "@nx/react": "^21.5.3",
    "@nx/workspace": "^21.5.3",
    "@openapitools/openapi-generator-cli": "^2.24.0",
    "@playwright/test": "^1.43.1",
    "@remix-run/testing": "^2.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-core": "^4.10.3",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.3",
    "msw": "^2.2.3",
    "nx": "^21.5.3",
    "plop": "^4.0.4",
    "prettier": "^3.6.2",
    "prisma": "^5.11.0",
    "standard-version": "^9.5.0",
    "swagger-codegen-cli": "^2.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "vitest": "^3.2.4"
  }
}
