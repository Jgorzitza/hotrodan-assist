################################################################################
# Shopify Admin (Remix + Polaris) â€” Environment Example (no secrets)
################################################################################

# Shopify app credentials (from Partners dashboard)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Public app URL used by the Shopify CLI/tunnel (no trailing slash)
SHOPIFY_APP_URL=

# OAuth scopes expected by the app (comma-separated)
# Note: the app code reads SCOPES (not SHOPIFY_SCOPES)
SCOPES=read_products,read_orders

# Optional: prefill the development store domain for convenience
SHOPIFY_SHOP=

################################################################################
# Prisma / Database (PostgreSQL)
################################################################################

# Primary Prisma connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app

# Direct URL should be the plain Postgres URL (no driver prefixes)
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/app

# Shadow database for migrations (optional locally)
SHADOW_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app_shadow

################################################################################
# MCP feature toggles (tests use mocks by default)
################################################################################

ENABLE_MCP=true
MCP_FORCE_MOCKS=true

